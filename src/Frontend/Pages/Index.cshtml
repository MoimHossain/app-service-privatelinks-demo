@page
@model IndexModel
@inject Microsoft.Extensions.Options.IOptions<FrontendConfiguration> Config
@inject Frontend.ApiAgent agent
@{
    ViewData["Title"] = "Home page";

    ViewData["URL"] = Config.Value.BackendHost;



    ViewData["Status"] = "------";
    ViewData["Body"] = await agent.GetResponseAsync();

}
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Backend URL: @ViewData["URL"] </p>
        <h3>Request details</h3>
        <p>
            <h4>Status</h4>
            @ViewData["Status"]
        </p>
        <p>
            <h4>Body</h4>
            @ViewData["Body"]
        </p>
    </div>
